<div
  class="topBar-container"
  style="
    background-color: {{ block.settings.bg_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.padding }};
    border-radius: {{ block.settings.border_radius}};
    width: 100%;
    height: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
  "
>
  {{ block.settings.text }}
  <button id="close-topbar">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
      <path fill-rule="evenodd" d="M5.47 5.47a.75.75 0 0 1 1.06 0L12 10.94l5.47-5.47a.75.75 0 1 1 1.06 1.06L13.06 12l5.47 5.47a.75.75 0 1 1-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 0 1-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
    </svg>
  </button>
</div>
<style>
  body {
    padding-top: 50px;
  }
  #close-topbar {
    background-color: transparent;
    border: none;
    color: white;
    font-size: 16px;
    cursor: pointer;
    position: absolute;
    right: 50px;
    top: 50%;
    transform: translateY(-50%);
    width: 50px;
    height: 50px;
  }
</style>
<script>
  document.getElementById('close-topbar').addEventListener('click', function () {
    document.querySelector('.topBar-container').style.display = 'none';
    document.body.style.paddingTop = '0';
  });
</script>
{% schema %}
{
  "name": "Top Bar",
  "target": "body",
  "stylesheet": "topbar.css",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Background Colour", "default": "#000" },
    { "type": "color", "id": "text_color", "label": "Text Colour", "default": "#fff" },
    { "type": "text", "id": "padding", "label": "Padding", "default": "10px 20px" },
    { "type": "text", "id": "border_radius", "label": "Radius", "default": "8px" },
    { "type": "text", "id": "text", "label": "Text", "default": "Free Shipping on Orders Over $50" }
  ],
  "enabled_on": {
    "templates": ["*"]
  }
}
{% endschema %}
